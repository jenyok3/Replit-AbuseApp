{
  "appId": "com.abuseapp.desktop",
  "productName": "AbuseApp Desktop",
  "directories": {
    "output": "electron-dist"
  },
  "files": [
    "dist/**/*",
    "public/electron.cjs",
    "node_modules/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": "dmg"
  },
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
